<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SCM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="340"
        Width="300"
        Height="340"
        CanResize="False"
        x:Class="SCM.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/SCM-icon.png"
        Title="Simple Character Manager">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Name="MainWindowStack" Orientation="Vertical">
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontWeight="Bold"/>
        <Button Click="ButtonHandler" Margin="10" HorizontalAlignment="Stretch" Name="MasterSpellbook">Master Spellbook</Button>
        <Button Click="ButtonHandler" Margin="10" HorizontalAlignment="Stretch" Name="ClassRegistry">Class Registry</Button>
        <Separator Margin="4" HorizontalAlignment="Stretch"/>
        <Label HorizontalAlignment="Center" Margin="0,10,0,0">Character Sheet Selection</Label>
        <ComboBox x:Name="CSList" Margin="10" HorizontalAlignment="Stretch" ItemsSource="{Binding Sheets}" SelectedItem="{Binding SelectedSheet, Mode=TwoWay}" MaxDropDownHeight="200" />
        <UniformGrid Rows="1" Columns="2">
            <Button Click="ButtonHandler" Margin="10,5,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="CopyCS">Copy</Button>
            <Button Click="ButtonHandler" Margin="10,5,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="LoadCS">Load</Button>
        </UniformGrid>
        <Button Click="ButtonHandler" Margin="10" HorizontalAlignment="Stretch" Name="NewCS">New Character</Button>
    </StackPanel>
</Window>
