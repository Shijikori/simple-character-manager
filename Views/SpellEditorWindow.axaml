<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SCM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Width="800"
        Height="600"
        CanResize="False"
        x:Class="SCM.Views.SpellEditorWindow"
        x:DataType="vm:SpellEditorViewModel"
        Icon="/Assets/SCM-icon.png"
        Title="{Binding Title}">
    <Design.DataContext>
        <vm:MasterSpellbookViewModel/>
    </Design.DataContext>

    <!-- I'm thinking this should simply be a spell editor window and not the master spellbook which instead should be a simpler window showing the list of registered spells with summary information -->
    <Grid Name="MainLayoutGrid" ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto" Margin="5">
        <Grid Name="TopGrid" ColumnDefinitions="*,1.5*" RowDefinitions="*" Margin="5" Grid.Row="0" Grid.Column="0">
            <Label Grid.Row="0" Grid.Column="0" Target="SpellNameInput" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="5" Content="Spell Name" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Watermark="Enter the spell name" HorizontalAlignment="Stretch" Name="SpellNameInput" Text="{Binding SpellName, Mode=TwoWay}"/>
        </Grid>
        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,1.3*,*" Grid.Row="1" Grid.Column="0" Margin="5">
            <Grid ColumnDefinitions="*, *" VerticalAlignment="Center" Grid.Column="0">
                <Label Grid.Column="0" Target="LevelInput" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">Level</Label>
                <TextBox Grid.Column="1" Name="LevelInput" Margin="5" Text="{Binding Level, Mode=TwoWay}" />
            </Grid>
            <Grid ColumnDefinitions="Auto" RowDefinitions="Auto,Auto" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1">
                <Label Grid.Column="0" Grid.Row="0" Target="Components" Margin="10,5,5,5" VerticalAlignment="Center">Components</Label>
                <StackPanel Grid.Column="0" Grid.Row="1" Name="Components" Margin="5,0,5,0" Orientation="Horizontal" VerticalAlignment="Top">
                    <CheckBox Name="ComponentsV" Margin="5,0,5,0" FlowDirection="RightToLeft" IsChecked="{Binding Verbal, Mode=TwoWay}">V</CheckBox>
                    <CheckBox Name="ComponentsS" Margin="5,0,5,0" FlowDirection="RightToLeft" IsChecked="{Binding Somatic, Mode=TwoWay}">S</CheckBox>
                    <CheckBox Name="ComponentsM" Margin="5,0,5,0" FlowDirection="RightToLeft" IsChecked="{Binding Material, Mode=TwoWay}">M</CheckBox>
                </StackPanel>
            </Grid>
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2">
                <Label Grid.Column="0" Margin="5" VerticalAlignment="Center" Target="CastTimeList">Casting Time</Label>
                <ComboBox Grid.Column="1" Margin="5" Name="CastTimeList" HorizontalAlignment="Stretch" ItemsSource="{Binding CastTimes}" SelectedItem="{Binding SelectedCastTime, Mode=TwoWay}"/>
            </Grid>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" VerticalAlignment="Center" Grid.Column="3" Grid.Row="0">
                <Label Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" Target="RangeInput">Range</Label>
                <TextBox Grid.Column="1" Margin="5" Name="RangeInput" Text="{Binding Range, Mode=TwoWay}"/>
            </Grid>
            <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" Target="MaterialsInput">Materials</Label>
            <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" Name="MaterialsInput" Text="{Binding Materials, Mode=TwoWay}" />
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1">
                <Label Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" Target="ShapeInput">Shape</Label>
                <TextBox Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Name="ShapeInput" Text="{Binding Shape, Mode=TwoWay}"/>
            </Grid>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1">
                <Label Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right" Target="SizeInput">Size</Label>
                <TextBox Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Name="SizeInput" Text="{Binding Size, Mode=TwoWay}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
